@model IEnumerable<SocialMediaManager.Models.SocialAccount>

@{
    ViewData["Title"] = "Linked Social Accounts";
}

<section class="py-5 pb-5">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Your linked social platforms</p>
                <h2 class="fw-bold">Manage your accounts</h2>
            </div>
        </div>

        @foreach (var account in Model)
        {
            <div class="row d-flex justify-content-center mb-3">
                <div class="col-md-6 col-xl-4 d-flex justify-content-between align-items-center bg-light rounded shadow p-3">
                    <div>
                        <strong>@account.Platform</strong><br />
                        Page ID: <code>@account.UsernameOnPlatform</code>
                    </div>
                    <a class="btn btn-danger btn-sm" href="/social/unlink/@account.Platform.ToString().ToLower()">Unlink</a>
                </div>
            </div>
        }

        <div class="row d-flex justify-content-center mt-4">
            <div class="col-md-6 col-xl-4 text-center">
                <p class="fw-bold">Add new platforms</p>
                <a class="btn btn-primary d-block mb-2" href="/facebook/login">Link Facebook Page</a>
                <a class="btn btn-dark d-block" href="/twitter/login">Link X / Twitter</a>
            </div>
        </div>
    </div>
</section>
